<Window x:Class="NavigationDrawerPopUpMenu2.windows.win_add_brand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigationDrawerPopUpMenu2.windows"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Title="Add Brand" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Brand Name" Margin="5 0 0 0"/>
            <Viewbox HorizontalAlignment="Left">
                <TextBox TextAlignment="Center" x:Name="addBrand" BorderThickness="1" BorderBrush="#BFC2C9" FontFamily="Microsoft Tai Le" Padding="2" FontSize="13" Width="300" Margin="10 0 10 10" />
            </Viewbox>
        </StackPanel>

        <Button x:Name="adBrandBtn" Content="Add Brand" Margin="15 70 15 0" Click="adBrandBtn_Click" />
    </Grid>
</Window>
