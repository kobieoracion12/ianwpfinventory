<Window x:Class="NavigationDrawerPopUpMenu2.windows.window_cashButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigationDrawerPopUpMenu2.windows"
        mc:Ignorable="d"
        Title="" Height="300" Width="540" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >

    <Grid>
        <Grid Margin="10">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Enter Amount:" FontWeight="SemiBold" FontSize="13" Foreground="Black" Margin="10 0 0 0"/>
                    <TextBox x:Name="cashAmount" FontFamily="Microsoft Tai Le" FontSize="50" Margin="5" Background="White" TextAlignment="Center" KeyDown="entrySearch_KeyDown" PreviewTextInput="TextBox_OnPreviewTextInput"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
