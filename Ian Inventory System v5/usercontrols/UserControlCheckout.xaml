<UserControl x:Class="NavigationDrawerPopUpMenu2.usercontrols.UserControlCheckout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationDrawerPopUpMenu2.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1080">


    <Grid Background="#EDEFF3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="141*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="White" Margin="70 0 0 0">
            <Grid.Effect>
                <DropShadowEffect RenderingBias="Quality" Color="#FF838383" Opacity="0.2"/>
            </Grid.Effect>
        </Grid>
        
        <!-- Void Section -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid>
                <Rectangle Margin="80 10 0 10" RadiusX="8" RadiusY="8" Fill="White">
                    <Rectangle.Effect>
                        <DropShadowEffect RenderingBias="Quality" Color="#FF838383" Opacity="0.2"/>
                    </Rectangle.Effect>
                </Rectangle>

                <Grid Margin="80 10 0 10">
                    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBox x:Name="entrySearch" Text="{Binding MyText}" FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}" FontFamily="Microsoft Tai Le" FontSize="10" Height="30" Width="250" Margin="20" Background="White" TextChanged="TextBox_TextChanged"/>
                    </Viewbox>
                    
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                        <Button Content="Void Entry" Background="#e86845" Margin="20 0 0 0" />
                        <Button Content="Delete Selection" Background="#e86845" Margin="20 0 20 0" />
                    </StackPanel>
                    
                </Grid>
                
            </Grid>
        </Grid>

        <!-- Checkout List -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="80 0 0 10" Background="#ffffff">
            <ListView x:Name="aa" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridView.Columns>
                            <GridViewColumn DisplayMemberBinding="{Binding refNo }" Header="#" Width="50"/>
                            <GridViewColumn DisplayMemberBinding="{Binding prodItem }" Header="Item" Width="150" />
                            <GridViewColumn DisplayMemberBinding="{Binding prodPrice }" Header="Price" Width="100" />
                            <GridViewColumn DisplayMemberBinding="{Binding prodQty }" Header="Qty" Width="100"/>
                            <GridViewColumn DisplayMemberBinding="{Binding prodSubtotal }" Header="Subtotal" Width="120"/>
                            <GridViewColumn DisplayMemberBinding="{Binding prodDOP }" Header="Date of Purchase" Width="200"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Exchange List -->
        <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" >
            <Grid>
                <Rectangle Margin="10" RadiusX="8" RadiusY="8" Fill="White">
                    <Rectangle.Effect>
                        <DropShadowEffect RenderingBias="Quality" Color="#FF838383" Opacity="0.2"/>
                    </Rectangle.Effect>
                </Rectangle>
            </Grid>
            
        </Grid>


    </Grid>
</UserControl>
